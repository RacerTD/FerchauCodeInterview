<Window x:Class="CarRental.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRental"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<TabControl>
			
			<!-- Customer Table -->
			<TabItem Header="Customer Table">
				<Frame Source="Views/CustomerTableView.xaml"/>
			</TabItem>

			<!-- Car Table -->
			<TabItem Header="Car Table">
				<Frame Source="Views/CarTableView.xaml"/>
			</TabItem>

			<!-- Car Table -->
			<TabItem Header="Rental Table">
				<Frame Source="Views/RentalTableView.xaml"/>
			</TabItem>

		</TabControl>
	</Grid>
</Window>
